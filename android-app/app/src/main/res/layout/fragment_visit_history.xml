<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".VisitHistory">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
                android:id="@+id/visit_history_backBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/visit_history_errorTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:text="Failed to retrieve past visits"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@id/visit_history_backBtn"
                app:layout_constraintTop_toTopOf="@id/visit_history_backBtn"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/visit_history_locationTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Store Location"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/visit_history_backBtn" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/viewHistoryRecycleView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/visit_history_locationTxt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_visit_history" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
