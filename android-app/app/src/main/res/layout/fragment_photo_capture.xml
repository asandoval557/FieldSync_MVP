<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PhotoCapture">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Attach Visit Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="142dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="166dp"
                android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="546dp"
                app:layout_constraintHorizontal_bias="0.442" app:layout_constraintVertical_bias="1.0"
                android:textSize="34sp"/>
        <Button
                android:text="Open Camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/photo_capture_openCameraBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.499"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <ImageButton
                android:id="@+id/photo_capture_backBtn"
                android:layout_width="56dp"
                android:layout_height="49dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.014"/>
        <TextView
                android:layout_width="156dp"
                android:layout_height="20dp" android:id="@+id/visit_notes_locationTxt"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.019" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:hint="Store Location"
                app:layout_constraintVertical_bias="0.994"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>