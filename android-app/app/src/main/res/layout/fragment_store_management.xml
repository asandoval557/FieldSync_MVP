<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StoreManagement">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/visitRecyclerView"
            android:layout_width="391dp"
            android:layout_height="674dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.429"/>
    <ImageButton
            android:id="@+id/store_management_backBtn"
            android:layout_width="56dp"
            android:layout_height="49dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="17dp"
            android:layout_marginEnd="349dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="156dp"
            android:layout_height="20dp" android:id="@+id/visit_notes_locationTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintVertical_bias="0.969"  android:hint="Store Location"/>
</androidx.constraintlayout.widget.ConstraintLayout>